#include <stdio.h>
int main(){

    int numero1, numero2, numero3, menor1;
    
    printf("\nVamos fazer uma menor de três.\nPra começar digite o primeiro número:\n ");
    scanf("%d", &numero1);

    printf("\n\nAgora, qual seria o segundo número?\n ");
    scanf("%d", &numero2);

    if(numero1 <= numero2){
        menor1 = numero1;
    }
    else{
        menor1 = numero2;
    }

    printf("\n\nPor fim, qual o terceiro número?\n ");
    scanf("%d", &numero3);

    if(numero3 <= menor1){
        printf("\n\nO menor dos três números é o: %d.\n", numero3);    
    }
    else{
        printf("\n\nO menor dos três números é o: %d.\n", menor1);
    }
}
