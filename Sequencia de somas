#include <stdio.h>
int main(){
    int soma = 0;
    int maior = 0;
    int numero1;
    int numero2 = 1;
    
    printf("\n\nBem vindo. \nPara encerrar basta 'somar' 0.\nVamos começar");
    printf("\n\nQual o primeiro número? ");
    scanf("%d", &numero1);
    
    while(numero2 != 0){
        printf("\n\nQual próximo número?\n");
        scanf("%d", &numero2);

        if(numero2 == 0){break;}
        
        soma = numero1 + soma + numero2;
        printf("A soma é: %d\n", soma);
    }
    if(soma < 1){
        printf("\n\nO total foi %d.", numero1);
    }
    else{
    printf("\n\nO total foi: %d.", soma);
    printf("\nFim.");
    }
}
